<Window x:Class="Acycl_GUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Acycl_GUI"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="240" Width="450" ResizeMode="NoResize">
  <Grid>
    <Label Content="Введите радиус вершины" Margin="0,42,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="158"/>
    <TextBox x:Name="RadiusBox" HorizontalAlignment="Center" Margin="0,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
    <Label Content="Целочисленное значение" HorizontalAlignment="Center" Margin="0,92,0,0" VerticalAlignment="Top" Width="120" Foreground="#FF545252" FontSize="9" Height="23"/>
    <Button Content="Применить значение" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Click="Button_Click" Width="181"/>
  </Grid>
</Window>
